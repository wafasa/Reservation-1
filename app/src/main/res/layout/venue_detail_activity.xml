<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <com.jorge.circlelibrary.ImageCycleView
        android:id="@+id/cycleView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="支持项目:足球"
        android:textColor="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.szy.reservation.customview.LayoutRipple
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/mine_address_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:background="@drawable/detail_address"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/mine_address_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_wdjj_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="深圳市宝安区宝民一路29保利公寓"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>


        </com.szy.reservation.customview.LayoutRipple>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/app_bg" />


        <com.szy.reservation.customview.LayoutRipple
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/mine_phone_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:background="@drawable/detail_phone"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/mine_phone_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0755-8888888"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>


        </com.szy.reservation.customview.LayoutRipple>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/app_bg" />


        <com.szy.reservation.customview.LayoutRipple
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/mine_price_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:background="@drawable/detail_price"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/mine_price_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_cz_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="45元/小时"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>


        </com.szy.reservation.customview.LayoutRipple>
    </LinearLayout>
</LinearLayout>
